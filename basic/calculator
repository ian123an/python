num1 = float(input("請輸入第一個數: "))
operator = input("請輸入運算符號: ")
num2 = float(input("請輸入第二個數: "))

if operator == "+":
    print(num1 + num2)
elif operator == "-":
    print(num1 - num2)
elif operator == "*":
    print(num1 * num2)
elif operator == "/":
    print(num1 / num2)
else:
    print("error")
